---
import BaseLayout from './BaseLayout.astro'
import BlogSidebar from '../components/BlogSidebar.astro'
import '../components/Styles/PostLayout.css'
import type { string } from 'astro/zod'
const {entry} = Astro.props
const {frontmatter} = Astro.props
const {headings} = Astro.props
const englishVer = entry.id.slice(6).split('.')[0]

const title = `Plainspoken | ${frontmatter.title}`

function toDateString(Date: Date){
    const months = ["01", "02", "03", "04", "05", "06", 
    "07", "08", "09", "10", "11", "12"]

    const day = Date.getDate();
    const mouth = months[Date.getMonth()];
    const year = Date.getFullYear();

    return `${day}/${mouth}/${year}`;
  }

const embed = `<div style="font-family: 'Times New Roman', serif; gap: 15px; padding: 1em; margin: 0 auto; display: flex; flex-direction: column; width: 300px; max-height: 400px; box-shadow: 0 4px 4px 2px rgba(50,50,50,0.08);">
      <style>
        .plainslink{
          text-decoration: underline;
          color: var(--main);
          text-decoration-color: var(--highlight);
          transition: 0.2s;
          cursor: pointer;
        }
        .plainslink:hover{
          opacity: 0.7;
        }
      </style>
      <a href="https://plainspoken.netlify.app/blog/posts/${entry.slug}" target="blank_" class="plainslink"><h2 style="border-left: 4px solid var(--highlight); padding-left: 0.3em;">${frontmatter.title}</h2></a>
      <img src="${frontmatter.image.url}" alt="Post img" style="align-self: center; max-width: 100%;" />
      <p>${frontmatter.description}</p>
      <p>Published on: ${frontmatter.pubDate}</p>
      <p>Written by: ${frontmatter.author}</p>
      <p><b>Tags:</b>${frontmatter.tags.map((tag) => `<a class="plainslink" href={"/tags/" + ${tag}>${tag}</a>`)}</p>
  </div>`;
---

<BaseLayout pageTitle={title}>
    <div class="mainPostDiv">
    <div class="postDiv">
        <h1>{frontmatter.title}</h1>
        {frontmatter.portuguese !== '' ? <a href={frontmatter.portuguese + entry.id.split('.')[0]}>Versão em português</a> : <a href={'/blog/posts/' + englishVer}>English version</a>}
        <p>{frontmatter.portuguese === '' ? 'Publicado em: ' : 'Published on: '} {toDateString(frontmatter.pubDate)}</p>
        <p>{frontmatter.portuguese === '' ? 'Escrito por: ' : 'Written by: '}{frontmatter.author}</p>
        <p style="display: flex; gap: 10px; flex-wrap: Wrap;"><strong>Tags: </strong>{frontmatter.tags.map((tag) => <a href={"/tags/" + tag}>{tag}</a>)}</p>
        {frontmatter.image.url ? <p style="text-align: center;"><img style="max-height: 70vh;" src={frontmatter.image.url}/></p> : <span></span>}
        <br />
        <hr />
        <slot />
    </div>
    <BlogSidebar language={frontmatter.portuguese} headings={headings} />
    </div>
</BaseLayout>