---
import {Icon} from 'astro-icon'
import './Styles/BlogSidebarAnimations.css'
import './Styles/BlogSidebar.css'
interface Props {
    headings: Array<Object>;
}

const {headings} = Astro.props
const {language} = Astro.props

let i = 0;
---
<script src="./Scripts/ShowHideAside.js"></script>
<a id="showHide"><Icon style="cursor: pointer; position: absolute; top: 17vh; right: 20px; display: none; opacity: 0;" ArrowLeft width="27" name="ic:baseline-keyboard-double-arrow-left"/></a>
<aside id="aside">
    <a id="showHide">
        <Icon style="cursor: pointer;" ArrowRight width="27" name="ic:baseline-keyboard-double-arrow-right"/>    
    </a>
    <p class="navText">{language === '' ? 'Nessa página:' : 'On this page:'}</p>
    <nav>
        <ul>
            {
                headings.map((heading: any) => (
                    <li>
                        <a style={heading.depth > 2 ? "margin-left: " + heading.depth * 8 + "px;" : "margin-left: 0;"} href={`#${heading.slug}`}>{heading.depth <= 2 ? '• ' : ''}{heading.text}</a>    
                    </li>
                ))
            }
        </ul>
    </nav>
</aside>